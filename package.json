{
  "name": "virtualdev",
  "version": "0.0.1",
  "description": "Framework for developing virtual worlds for the web",
  "license": "MIT",
  "author": "Laurent Dethoor aka LD2Studio",
  "main": "./dist/vdev.webgl.cjs.js",
  "module": "./dist/vdev.webgl.es.js",
  "types": "./dist/types/vdev.webgl.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/vdev.webgl.d.ts",
      "import": "./dist/vdev.webgl.es.js",
      "require": "./dist/vdev.webgl.cjs.js"
    },
    "./webgpu": {
      "types": "./dist/types/vdev.webgpu.d.ts",
      "import": "./dist/vdev.webgpu.es.js",
      "require": "./dist/vdev.webgpu.cjs.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "vite build && npm run build:types",
    "build:types": "tsc"
  },
  "devDependencies": {
    "@tweakpane/core": "^2.0.5",
    "@types/three": "^0.182.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "three": "^0.182.0",
    "tweakpane": "^4.0.5"
  }
}
